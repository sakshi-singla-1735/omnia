  # - victoria-tls-test-job.yaml
{% endif %}
{% if kafka_support %}
  - kafka.kafka.yaml
  - kafka.kafkapump_user.yaml
  - kafka.kafka_bridge.yaml
  - kafka.kafka_bridge_lb.yaml
