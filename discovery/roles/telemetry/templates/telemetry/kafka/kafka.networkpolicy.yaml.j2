---
apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: kafka-ldms-access
  namespace: {{ telemetry_namespace }}
spec:
  # Apply policy to all Kafka broker pods
  podSelector:
    matchLabels:
      strimzi.io/cluster: kafka
      strimzi.io/kind: Kafka
      strimzi.io/name: kafka-broker
  policyTypes:
    - Ingress
  ingress:
    # Allow all traffic on TLS ports (9093, 9094) - these require authentication
    - ports:
        - protocol: TCP
          port: 9093  # TLS listener (mTLS auth)
        - protocol: TCP
          port: 9094  # External TLS listener (mTLS auth)
    
    # Restrict plaintext port 9092 to LDMS store pods only
    - from:
        # Allow LDMS store pods
        - podSelector:
            matchLabels:
              app: nersc-ldms-store
        # Allow Kafka controller and broker pods (internal Kafka communication)
        - podSelector:
            matchLabels:
              strimzi.io/cluster: kafka
        # Allow Strimzi operators (for topic/user management)
        - namespaceSelector:
            matchLabels:
              name: {{ telemetry_namespace }}
          podSelector:
            matchLabels:
              name: strimzi-cluster-operator
      ports:
        - protocol: TCP
          port: 9092  # Plaintext listener (no TLS, no auth - restricted access)
