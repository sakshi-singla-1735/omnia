---
apiVersion: kafka.strimzi.io/v1beta2
kind: KafkaBridge
metadata:
  name: bridge
  namespace: telemetry
spec:
  # Use TLS port 9093 instead of plain 9092
  bootstrapServers: kafka-kafka-bootstrap:9093
  enableMetrics: true
  http:
    port: 8080
  # Enable TLS for Kafka connection
  tls:
    trustedCertificates:
      - secretName: kafka-cluster-ca-cert
        certificate: ca.crt
  # Optional: Enable mTLS authentication
  # authentication:
  #   type: tls
  #   certificateAndKey:
  #     secretName: bridge-user
  #     certificate: user.crt
  #     key: user.key
  replicas: 1
